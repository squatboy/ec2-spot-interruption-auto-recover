# terraform.tfvars.example

# 1) 배포할 AWS 리전 (variables.tf의 region 변수, default는 ap-northeast-2)
region           = "ap-northeast-2"

# 2) EBS 데이터 볼륨이 위치할 AZ (variables.tf의 availability_zone)
availability_zone = "ap-northeast-2a"

# 3) ASG가 사용할 Private Subnet ID 목록 (variables.tf의 private_subnets)
private_subnets = [
  "subnet-0123456789abcdef0",
  "subnet-0fedcba9876543210",
]

# (선택) Spot 인스턴스 타입 목록, 기본값이 좋으면 주석 처리
#instance_types = ["m7g.xlarge", "c7g.xlarge", "r7g.xlarge"]

# (선택) Launch Template 기본 타입, 기본값이 좋으면 주석 처리
#default_type    = "m7g.xlarge"

# (선택) 데이터 볼륨 Tag:Name 값, 기본값(myapp-data)이면 주석 처리
#data_volume_tag = "myapp-data"